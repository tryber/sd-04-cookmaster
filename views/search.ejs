<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Recipe Search</title>
  </head>
  <body>

    <%- include('./includes/header.ejs', { user }) %>

    <h1>Buscar Receitas</h1>
    <form action="/recipes/search" method="GET">
      <input data-testid="receita" type="text" name="q" id="recipeInput" />
      <button data-testid="buscar" type="submit">Buscar</button>
    </form>

    <% if (messages) { %>
      <div class="message">
        <%= messages %>
      </div>
    <% } %>

    <% if (recipes) { recipes.forEach((recipe) => { %>
    <ul>
      <li><%= recipe[3] %></li>
      <li><%= recipe[1] %></li>
      <li><a href="/recipe/<%= recipe[0] %>">Ver mais</a></li>
    </ul>
    <% })} %>
  </body>
</html>
