<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cookmaster</title>
  </head>
  <body>
    <%- include('navbar', {user}); %> <% if (recipes) {%>
    <div>
      <h1>Receitas</h1>
      <% if (user) {%>
      <a href="/recipe/new">
        <button data-testid="nova-receita">Nova receita</button>
      </a>
      <a href="/recipes/search">
        <button data-testid="buscar-receita">Buscar receita</button>
      </a>
      <%}%> <% recipes.forEach(recipe => { %>
      <div>
        <p>Receita: <%= recipe.name %></p>
        <p>Autor: <%= recipe.user%></p>
        <a href="/recipes/<%= recipe.id%>">Ver mais</a>
      </div>
      <%})%>
    </div>
    <% }%>
  </body>
</html>
