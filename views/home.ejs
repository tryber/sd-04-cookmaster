<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cookmaster - Home</title>
  </head>
  <body>
    <nav>
      <h1>Cookmaster | </h1>
      <a data-testid="buscar-receita" href="/recipes/search">Buscar Receita</a>
      <% if (user) { %>
        <a data-testid="nova-receita" href="/recipes/new">Nova Receita</a>
        <a data-testid="minhas-receitas" href="/me/recipes">Minhas Receitas</a>
        <% } %>
        <a data-testid="login" href="/login" >Login</a>

    </nav>
    <ul>
      <h1>Receitas</h1>
      <% recipes.forEach(({user, recipe, id}) => { %>
        <li>
          <%=`${recipe} ${user}`%>
          <a href=<%= `recipes/${id}` %> >Ver mais</a>
        </li>
      <% }) %>
    </ul>
  </body>
</html>
