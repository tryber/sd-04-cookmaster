<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cookmaster - Minhas Receitas</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <%- include('headerCook') %>

    <div class="container">
      <h3 class="mx-auto text-center m-3">Minhas Receitas</h3>

      <div class="row justify-content-around">
        <% recipes.forEach((recipe) => { %>

        <div class="card col-5 mb-3 text-white text-center mx-auto w-50 bg-secondary">
          <h4 class="mt-1 card-title"><%= recipe.name %></h4>
          <p class="card-text"><%= recipe.user %></p>
          <a class="btn btn-info w-50 mx-auto mb-2" href="/recipes/<%= recipe.id %>">Ver mais</a>
        </div>
        <% }) %>
      </div>
    </div>
  </body>
</html>
