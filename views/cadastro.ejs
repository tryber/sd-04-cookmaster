<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cookmaster - Cadastro</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <% if (success) {%>
    <h3 class="card text-center mx-auto bg-success w-75 m-3"><%= success %></h3>
    <h6 class="text-center">Fa√ßa login</h6>
    <% } %>
    <form class="m-4" action="/cadastro" method="POST">
      <div class="card w-50 mx-auto">
        <h2 class="text-center m-2">Cookmaster cadastro</h2>
        <div class="form-group w-75 mx-auto m-2">
          <% if (isEmail) {%>
          <h6 class="card text-center text-white mx-auto bg-danger m-3"><%= isEmail %></h6>
          <% } %>
          <label for="email">Email: </label>
          <input
            required
            class="form-control"
            data-testid="email"
            type="text"
            name="email"
            id="email"
          />
        </div>
        <div class="form-group w-75 mx-auto">
          <% if (isName) {%>
          <h6 class="card text-center text-white mx-auto bg-danger m-3"><%= isName %></h6>
          <% } %>
          <label for="nome">Nome: </label>
          <input
            required
            class="form-control"
            data-testid="nome"
            type="text"
            name="firstName"
            id="nome"
          />
        </div>
        <div class="form-group w-75 mx-auto">
          <% if (isLastName) {%>
          <h6 class="card text-center text-white mx-auto bg-danger m-3"><%= isLastName %></h6>
          <% } %>
          <label for="sobrenome">Sobrenome: </label>
          <input
            required
            class="form-control"
            data-testid="sobrenome"
            type="text"
            name="lastName"
            id="sobrenome"
          />
        </div>
        <div class="form-group w-75 mx-auto">
          <% if (isPassword) {%>
          <h6 class="card text-center text-white mx-auto bg-danger m-3"><%= isPassword %></h6>
          <% } %>
          <label for="senha">Senha: </label>
          <input
            required
            class="form-control"
            data-testid="senha"
            type="password"
            name="password"
            id="senha"
          />
        </div>
        <div class="form-group w-75 mx-auto">
          <% if (isConfirmPassword) {%>
          <h6 class="card text-center text-white mx-auto bg-danger m-3">
            <%= isConfirmPassword %>
          </h6>
          <% } %>
          <label for="confirmar-passwordInput">Confirmar senha: </label>
          <input
            required
            class="form-control"
            data-testid="confirmar-senha"
            type="password"
            name="confirmPassword"
            id="confirmar-senha"
          />
        </div>
        <div class="d-flex justify-content-around m-3">
          <button class="btn btn-dark" type="submit" data-testid="cadastrar">Cadastre-se</button>
          <a class="btn btn-secondary" href="/login" data-testid="login">Login</a>
        </div>
      </div>
    </form>
  </body>
</html>
