<html lang="en">
  <%- include("../partials/head.ejs") %>
  <body>
    <% if (message !== '') {%>
    <div class="message"><%= message %></div>
    <% } %>
    <form action="/login" method="POST">
      <label for="emailInput">Email: </label>
      <input type="text" data-testid="email" name="email" id="emailInput" /><br />
      <label for="passwordInput">Senha: </label>
      <input type="password" data-testid="senha" name="password" id="passwordInput" /><br />
      <% if (redirect) { %>
      <input type="hidden" name="redirect" value="<%= decodeURIComponent(redirect) %>" />
      <% } %>
      <button type="submit" data-testid="entrar">Entrar</button>
      <a data-testid="cadastrar" href="/register">Cadastre-se</a>
    </form>
  </body>
</html>
