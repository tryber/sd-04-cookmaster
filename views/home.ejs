  <body>
    <%- include('../Components/header',{user}) %>
    <main>
      <div class="d-flex justify-content-around">
        <h2>Receitas</h2>
        <a href="/recipes/search" data-testid="buscar-receita" class="btn btn-primary">
          Buscar Receitas
        </a>
        <% if (user){ %>
        <a href="recipes/newRecipe" data-testid="nova-receita" class="btn btn-primary">Nova Receita</a>
        <% } %>
      </div>
      <div class="justify-content-lg-around">
        <% cooks.forEach((elemento) => { %>
        <div class="card card-body">
          <span><%= elemento.user%></span>
          <span><%= elemento.name%></span>
          <a href="/recipes/<%=elemento.id %>">Ver mais</a>
        </div>
        <% }) %>
