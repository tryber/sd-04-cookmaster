<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cookmaster - Home</title>
  </head>
  <body>
    <%- include('header', { user }) -%>
    <div>
      <button type="button" data-testid="buscar-receita" onclick="window.location.pathname='/recipes/search'">Buscar Receita</button>
      <h1>Receitas</h1>
      <!-- These buttons should only appear if the user is logged in. -->
      <% if(user) {%>
        <button onclick="window.location.pathname='/recipes/new'" data-testid="nova-receita" >
          Nova Receita
        </button>
        <button onclick="window.location.pathname='/my/recipes'" data-testid="minhas-receitas" >
          Minhas Receitas
        </button>
        <button onclick="window.location.pathname='/my/edit'" data-testid="minha-conta" >
          Minha Conta
        </button>
      <% } %>
      <!-- Showing recipes and database user-->
      <% getAllRecipes.forEach(item => { %>
      <div>
        <p>Receita: <%= item.name %> </p>
        <p>Usu√°rio: <%= item.user %> </p>
        <a href= <%= `/recipes/${item.id}` %> >Ver mais</a>
      </div>
      <% }) %>
    </div>
  </body>
</html>
