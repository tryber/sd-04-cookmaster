<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Cookmaster - Home</title>
</head>

<body>
  <h1>Cookmaster</h1>

  <% if(user) { %>
  <a href="/recipes/new" data-testid="nova-receita">
    Nova Receita
  </a>

  <a href="/me/recipes" data-testid="minhas-receitas">
    Minhas Receitas
  </a>
  <a href="/logout" data-testid="logout">
    Logout
  </a>
  <% } else { %>
  <a href="/login" data-testid="login">
    Login
  </a>
  <% } %>

  <a href="/recipes/search" data-testid="buscar-receita">
    Buscar Receita
  </a>

  <h1>Receitas</h1>
  <% recipes.forEach(([id, user, name]) => { %>
  <h2><%= name %></h2>
  <p><%= user %></p>
  <a href=<%= `recipes/${id}` %>>Ver mais</a>
  <% }); %>
</body>

</html>
