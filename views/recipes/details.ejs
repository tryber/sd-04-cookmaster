<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cookmaster - Detalhes da Receita</title>
  <link type="text/css" rel="stylesheet" href="/styles/styles.css">
</head>

<body>
  <div>
    <nav>
      <h1>Cookmaster</h1>
        <% if (user) { %>
          <p><%= `${user.name} ${user.lastName} |` %></p>
          <a data-testid="logout" href="/logout">Logout</a>
        <% } %>
        <% if (!user) { %>
          <a data-testid="login" href="/login" >Login</a>
        <% } %>
    </nav>
    <h2>Receitas</h2>
    <div>
      <% if (user && recipe) { %>
        <a data-testid="editar-receita" href=<%= `${recipe.id}/edit` %>>Editar Receita</a>
        <a data-testid="excluir-receita" href=<%= `${recipe.id}/delete` %>>Excluir Receita</a>
        <a data-testid="minhas-receitas" href="/user/recipe">Minhas Receitas</a>
      <% } %>
    </div>
    <h3><%= recipe.name %></h3>
    <p>Enviada por <%= recipe.user %></p>
    <h4>Ingredientes</h4>
    <ul>
      <% recipe.ingredients.split(',').forEach((ingredient) => { %>
        <li><%= ingredient %></li>
      <% }) %>
    </ul>
    <h3>Modo de preparo</h3>
    <p><%= recipe.instructions %></p>
  </div>
</body>
</html>
