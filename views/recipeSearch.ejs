<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search</title>
  </head>
  <body>
    <form>
      <input data-testid="receita" type="text" name="q" />
      <button data-testid="buscar" type="submit">Buscar</button>
    </form>
    <ul>

      <% if (recipes) { %>
        <% recipes.forEach((recipe) => { %>
          <li><%= recipe.name %> do <%= recipe.user %> <a href="/recipes/<%= recipe.id %>">Ver mais</a></li>
        <% }); %>
      <% } %>

    </ul>
  </body>
</html>
