<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cookmaster - Home</title>
  </head>
  <body>
    <%- include('../stickers/header.ejs', {user}); %>
    <h2>Buscar Receitas</h2>
    <form method="GET">
      <input type="text" name="q" data-testid="receita" required/>
      <button type="submit" data-testid="buscar">Buscar</button>
    </form>
    <div style="display: flex; flex-wrap: wrap;">
      <% searchedRecipes.map(recipe => { %>
      <div
        style="
          display: flex;
          border-radius: 5px;
          color: whitesmoke;
          justify-content: space-between;
          flex-direction: column;
          background: gray;
          max-width: 200px;
          margin: 15px;
          padding: 15px;
        "
      >
        <h3 style="margin-top: 0;">Receita: <%= recipe.name %></h3>
        <div>
          <h4 style="margin: 0;">Autor: <%= recipe.user %></h4>
          <a style="color: whitesmoke;" href=<%= `/recipes/${recipe.id}` %>>Ver mais</a>
        </div>
      </div>

      <%})%>
    </div>
    <div style="display: flex; flex-wrap: wrap;">
      <% !searchedRecipes.length && userRecipes.map(recipe => { %>
      <div
        style="
          display: flex;
          border-radius: 5px;
          color: whitesmoke;
          justify-content: space-between;
          flex-direction: column;
          background: gray;
          max-width: 200px;
          margin: 15px;
          padding: 15px;
        "
      >
        <h3 style="margin-top: 0;">Receita: <%= recipe.name %></h3>
        <div>
          <h4 style="margin: 0;">Autor: <%= recipe.user %></h4>
          <h4 style="margin-top: 0;">Ingredientes: <%= recipe.ingredients %></h4>
          <h4 style="margin-top: 0;">Modo de preparo: <%= recipe.instructions %></h4>
          <a style="color: whitesmoke;" href=<%= `/recipes/${recipe.id}` %>>Ver mais</a>
        </div>
      </div>
      <%})%>
    </div>
  </body>
</html>
