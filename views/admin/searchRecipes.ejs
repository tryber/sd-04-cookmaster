<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Buscar Receitas</title>
  </head>
  <body>
    <div class="main-container">
      <%- include('../../components/header/header', { user }); %>
      <main class="main-content">
        <div class="top-bar">
          <h1>Buscar Receitas</h1>
        </div>
        <div class="recipe-body">
          <form action="/recipes/search">
            <input class="search-bar" data-testid="receita" type="text" name="q">
            <button type="submit" data-testid="buscar">Buscar</button>
          </form>
        </div>
        <div class="recipes-container">
          <% recipes.map((recipe) => { %>
            <div class="recipe-card">
              <span><%= recipe.name %></span>
              <span><%= recipe.user %></span>
              <div>
                <a href="/recipes/<%= recipe.id %>">Ver mais</a>
              </div>
            </div>
          <% }) %>
        </div>
      </main>
    </div>
    <style>
      * {
        font-family: sans-serif;
        margin: 0;
        padding: 0;
      }

      .top-bar {
        display: flex;
        justify-content: space-between;
        padding: 40px 60px;
      }

      .top-bar span {
        color: #828282;
        font-size: 14pt;
        margin-top: 10px;
      }

      .recipe-body {
        padding: 5px 50px;
      }

      .search-bar {
        font-size: 12pt;
        height: 30px;
        text-indent: 10px;
        width: 70%;
      }

      button {
        background-color: #2d9cdb;
        border: none;
        color: white;
        cursor: pointer;
        height: 30px;
        width: 100px;
      }

      .cabecalho {
        align-items: center;
        background-color: #c4c4c4;
        display: flex;
        height: 60px;
        justify-content: space-between;
      }

      .header-element {
        padding: 30px;
      }

      .recipes-container {
        box-sizing: border-box;
        padding: 50px;
        display: flex;
        flex-wrap: wrap;
        width: 1302px;
      }

      .recipe-card {
        align-items: flex-start;
        background-color: #c4c4c4;
        box-sizing: border-box;
        display: flex ;
        flex-direction: column;
        height: 117px;
        margin: 10px 10px;
        padding: 30px;
        width: 343px;
      }

      .recipe-card span:first-child {
        font-size: 18pt;
      }

      .recipe-card div {
        display: flex;
        justify-content: flex-end;
        width: 270px;
      }
    </style>
  </body>
</html>
